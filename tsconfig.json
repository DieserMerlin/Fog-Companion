{
  "compilerOptions": {
    "target": "es2023",
    "module": "esnext",
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node10",
    "esModuleInterop": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "types": [
      "@overwolf/types",
      "node",
      "react",
      "react-dom"
    ],
    "rootDirs": [
      "./src"
    ],
  },
  "exclude": [
    "node_modules"
  ]
}